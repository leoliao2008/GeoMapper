<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_size_type_6"
    android:background="@color/colorGrey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNR"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/padding_size_type_6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/snr_spectrum_colors"
            android:layout_width="match_parent"
            android:layout_height="15dp">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FB041D"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FB9804"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FBFB04"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="#B0FB04"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="5"
                android:background="#007029"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/snr_spectrum_colors"
            android:layout_width="match_parent"
            android:layout_height="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/less_than_10"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/less_than_20"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/less_than_30"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/less_than_50"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="@string/more_than_50"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>