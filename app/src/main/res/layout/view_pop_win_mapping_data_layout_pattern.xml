<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:padding="@dimen/padding_size_type_3"
        android:layout_margin="@dimen/margin_smallest"
        android:translationZ="@dimen/layer_z_height_type_1">
        <RadioButton
            android:id="@+id/pop_win_layout_pattern_rbtn_by_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_by_type"/>
        <RadioButton
            android:id="@+id/pop_win_layout_pattern_rbtn_by_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_by_date"/>

    </RadioGroup>

</FrameLayout>
