<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorDefault"
    android:padding="@dimen/padding_size_type_2"
    android:translationZ="@dimen/layer_z_height_type_1">
    <RadioButton
        android:id="@+id/pop_win_layout_pattern_rbtn_by_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_by_type"/>
    <RadioButton
        android:id="@+id/pop_win_layout_pattern_rbtn_by_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_by_date"/>

</RadioGroup>