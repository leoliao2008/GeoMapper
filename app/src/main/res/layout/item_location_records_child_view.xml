<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_type_2"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/layout_margin_type_2"
        android:layout_marginRight="@dimen/layout_margin_type_2"
        android:layout_marginTop="@dimen/margin_smallest"
        android:layout_marginBottom="@dimen/layout_margin_type_2">
        <ImageView
            android:id="@+id/item_location_record_child_view_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_size_type_2"
            android:layout_margin="@dimen/layout_margin_type_2"
            android:src="@drawable/ic_pin_1"/>
        <TextView
            android:id="@+id/item_location_record_child_view_tv_title"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="中国深圳南山XXXX"
            android:layout_toRightOf="@id/item_location_record_child_view_iv_icon"/>

        <TextView
            android:id="@+id/item_location_record_child_view_tv_coordinate"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="中国深圳南山XXXX"
            android:layout_below="@id/item_location_record_child_view_tv_title"
            android:layout_alignLeft="@id/item_location_record_child_view_tv_title"
            android:textSize="@dimen/text_size_type_7"/>


        <TextView
            android:id="@+id/item_location_record_child_view_tv_save_date"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="中国深圳南山XXXX"
            android:layout_below="@id/item_location_record_child_view_tv_coordinate"
            android:layout_alignLeft="@id/item_location_record_child_view_tv_title"
            android:textSize="@dimen/text_size_type_5"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_folder_grey600_18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/layout_margin_type_2"
            android:layout_alignBottom="@id/item_location_record_child_view_tv_save_date"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/item_location_record_child_view_iv_delete_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_ic_delete_location_record"
                android:layout_marginRight="@dimen/layout_margin_type_2"/>
            <ImageView
                android:id="@+id/item_location_record_child_view_iv_edit_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_ic_edit_location_grey_to_white"/>

        </LinearLayout>

    </RelativeLayout>




</FrameLayout>
