<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorWhite">
    <Space
        android:layout_width="@dimen/margin_left_type4"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_loc_record_group_view_tv_tag_name"
        style="@style/TextViewStyleSaveLocationActivity"
        android:layout_margin="@dimen/layout_margin_type_1"
        android:padding="@dimen/padding_size_type_2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="分类一"/>

    <TextView
        android:id="@+id/item_loc_record_group_view_tv_child_count"
        style="@style/TextViewStyleSaveLocationActivity"
        android:layout_margin="@dimen/layout_margin_type_1"
        android:padding="@dimen/padding_size_type_2"
        android:text="0"/>

