<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.skycaster.geomapper.customized.LeftSwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/layer_z_height_type_1"
        >

        <ImageView
            android:id="@+id/fragment_location_record_iv_clear_all_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_delete_white_to_grey"
            android:layout_gravity="end"
            android:padding="@dimen/padding_size_type_1"
            android:background="@color/colorRed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewSettingStyle"
                android:text="@string/loc_record_count"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/fragment_location_record_tv_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                style="@style/TextViewStyleSaveLocationActivity"
                android:text="5"/>

            <ImageView
                android:id="@+id/fragment_location_record_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_ic_add_white_to_grey"
                android:padding="@dimen/padding_size_type_1"/>

        </LinearLayout>



    </com.skycaster.geomapper.customized.LeftSwipeLayout>

    <ExpandableListView
        android:id="@+id/fragment_location_record_exp_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"/>


</LinearLayout>