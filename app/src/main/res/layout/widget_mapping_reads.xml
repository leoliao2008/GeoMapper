<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_black_transparent_round"
    android:padding="@dimen/dp_5"
    android:layout_margin="@dimen/dp_2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/moving_path_length"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/activity_mapping_tv_path_length"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="0.00"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="0dp"
            android:textSize="@dimen/text_size_type_7"
            android:textColor="@color/colorYellow"/>
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/meter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/perimeter"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/activity_mapping_tv_perimeter"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="0.00"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="0dp"
            android:textSize="@dimen/text_size_type_7"
            android:textColor="@color/colorYellow"/>
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/meter"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/acreage"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/activity_mapping_tv_acreage"
            style="@style/TextViewStyleSaveLocationActivity"
            android:padding="0dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="0.00"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_type_7"
            android:textColor="@color/colorYellow"/>
        <TextView
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="@string/square_metre"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_type_7"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</LinearLayout>