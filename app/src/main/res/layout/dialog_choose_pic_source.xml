<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_smallest"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_add_loc_tag_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewSettingStyle"
        android:text="@string/choose_pic_source"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/margin_smallest"
        android:padding="@dimen/padding_size_type_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_choose_pic_source_iv_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_take_photo"/>

        <ImageView
            android:id="@+id/dialog_choose_pic_source_iv_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_pick_gallery"/>

    </LinearLayout>



    <Button
        android:id="@+id/dialog_choose_pic_source_btn_cancel"
        android:layout_margin="@dimen/margin_smallest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/cancel"
        android:textColor="@color/selector_black_to_white"
        android:background="@drawable/selector_primary_to_primary_dark"/>

</LinearLayout>