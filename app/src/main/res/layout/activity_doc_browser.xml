<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue">

        <TextView
            android:id="@+id/activity_doc_browser_tv_current_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/dimen_margin_5dp"
            android:text="sdcard://dir/dir/dir/dir/test.doc"
            android:padding="@dimen/dimen_padding_5dp"
            android:background="@color/colorWhite"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/dimen_padding_10dp"
        android:id="@+id/activity_doc_browser_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_doc_browser_btn_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上一层"/>
        <Button
            android:id="@+id/activity_doc_browser_btn_return"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="返回"/>
    </LinearLayout>

</LinearLayout>