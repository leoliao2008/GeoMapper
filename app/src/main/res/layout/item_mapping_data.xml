<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin_type_1">
    <ImageView
        android:id="@+id/item_mapping_data_iv_panorama_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/panorama_view_height"
        android:src="@drawable/pic_panorama_default"
        android:padding="@dimen/padding_size_type_2"
        android:scaleType="fitXY"
        android:contentDescription="@string/panorama_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/panorama_view_height"
        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/mapping_data_title"-->
                <!--android:textColor="@color/colorBlack"-->
                <!--android:padding="@dimen/padding_size_type_2"/>-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextViewStyleMappingDataItem"
                android:text="@string/mapping_data_title"
                />
            <TextView
                style="@style/TextViewStyleSaveLocationActivity"
                android:text="XXXXX"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextViewStyleMappingDataItem"
                android:text="@string/mapping_data_perimeter"
                />
            <TextView
                style="@style/TextViewStyleSaveLocationActivity"
                android:text="XXXXX"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextViewStyleMappingDataItem"
                android:text="@string/mapping_data_area"
                />
            <TextView
                style="@style/TextViewStyleSaveLocationActivity"
                android:text="XXXXX"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextViewStyleMappingDataItem"
                android:text="@string/mapping_data_date"
                />
            <TextView
                style="@style/TextViewStyleSaveLocationActivity"
                android:text="XXXXX"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_black_transparent"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/layout_margin_type_1"
        android:padding="@dimen/padding_size_type_2"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_delete_white_to_grey"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_edit_location_grey_to_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_zoom_in"/>
    </LinearLayout>


</android.support.v7.widget.CardView>