<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSettingStyle"
            android:text="@string/loc_record_count"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/fragment_mapping_data_admin_tv_data_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="5"/>

        <ImageView
            android:id="@+id/fragment_mapping_data_admin_iv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_sort_white_to_grey_36dp"
            android:padding="@dimen/padding_size_type_1"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/fragment_mapping_data_admin_exp_lst_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_mapping_data_admin_ll_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blank_file"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="@dimen/text_size_type_1"
                android:layout_margin="@dimen/layout_margin_type_1"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>

