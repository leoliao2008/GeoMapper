<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:translationZ="@dimen/layer_z_height_type_1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSettingStyle"
            android:text="@string/loc_record_count"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/fragment_mapping_data_admin_tv_data_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="5"/>

        <ImageView
            android:id="@+id/fragment_mapping_data_admin_iv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_ic_sort_white_to_grey_36dp"
            android:padding="@dimen/padding_size_type_1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/fragment_mapping_data_admin_exp_lst_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

    </LinearLayout>

</LinearLayout>

