<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewSettingStyle"
        android:text="@string/set_serial_port"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_margin="@dimen/margin_smallest"
        android:padding="@dimen/padding_size_type_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_smallest">

        <TextView
            android:text="@string/path"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            style="@style/TextViewSettingStyle"/>

        <Spinner
            android:id="@+id/activity_serial_port_admin_spn_serial_port"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_smallest">

        <TextView
            android:text="@string/serial_port_baud_rate"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            style="@style/TextViewSettingStyle"/>

        <Spinner
            android:id="@+id/activity_serial_port_admin_spn_baud_rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_serial_port_admin_btn_confirm"
            android:layout_margin="@dimen/margin_smallest"
            android:layout_width="0dp"
            android:layout_height="@dimen/sp_30"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/selector_white_to_yellow"
            android:background="@drawable/selector_primary_to_primary_dark"/>

        <Button
            android:id="@+id/activity_serial_port_admin_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/sp_30"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_15"
            android:layout_margin="@dimen/margin_smallest"
            android:textColor="@color/selector_white_to_yellow"
            android:background="@drawable/selector_primary_to_primary_dark"/>

    </LinearLayout>



</LinearLayout>