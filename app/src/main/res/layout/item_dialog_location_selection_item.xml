<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_size_type_2"
    android:background="@color/colorWhiteTransparent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/layout_margin_type_2">
    <ImageView
        android:id="@+id/item_dialog_location_selection_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_size_type_2"
        android:layout_margin="@dimen/layout_margin_type_2"
        android:scaleType="centerInside"
        android:src="@drawable/ic_pin_1"/>
    <TextView
        android:id="@+id/item_dialog_location_selection_tv_title"
        style="@style/TextViewStyleSaveLocationActivity"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="中国深圳南山XXXX"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_dialog_location_selection_tv_lat"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="50°N"
            android:textSize="@dimen/text_size_type_7"/>

        <TextView
            android:id="@+id/item_dialog_location_selection_tv_lng"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="50°E"
            android:textSize="@dimen/text_size_type_7"/>


        <TextView
            android:id="@+id/item_dialog_location_selection_tv_save_date"
            style="@style/TextViewStyleSaveLocationActivity"
            android:text="2017-07-14 15:30:40"
            android:textSize="@dimen/text_size_type_5"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_folder_grey600_18dp"/>

    </LinearLayout>


    
</LinearLayout>