<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>


    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyActionBarTitleTextStyle</item>
    </style>
    <style name="MyActionBarTitleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
    </style>

    <style name="APPTheme.FullScreenWithActionBar" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashPage" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonStyleNavigationItem">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTop">@drawable/ic_navi</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/padding_navigation_item</item>
    </style>

    <style name="TextViewSettingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_black_to_red</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:padding">@dimen/padding_navigation_item</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_1</item>
    </style>

    <style name="TextAppearanceExpandedTitle">
        <item name="android:textSize">@dimen/text_size_type_1</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="TextViewStyleSaveLocationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_type_6</item>
        <item name="android:text">@string/location_name</item>
        <item name="android:padding">@dimen/padding_size_type_2</item>
    </style>

    <style name="EditTextStyleSaveLocationActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_type_2</item>
        <item name="android:padding">@dimen/padding_size_type_1</item>
    </style>

    <style name="ButtonStyleLocationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/catalogue_admin</item>
        <item name="android:textColor">@color/selector_white_to_yellow</item>
        <item name="android:background">@drawable/selector_primary_to_primary_dark</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_2</item>
    </style>

    <style name="DividerType1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_type_2</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_type_2</item>
    </style>

    <style name="TextViewStyleMappingDataItem" parent="TextViewSettingStyle">
        <item name="android:textSize">@dimen/text_size_type_7</item>
        <item name="android:layout_margin">@dimen/margin_smallest</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>


    <style name="TextViewStyleSaveMappingData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/mapping_data_title</item>
        <item name="android:textSize">@dimen/text_size_type_3</item>
        <item name="android:padding">@dimen/padding_size_type_2</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_2</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="EditTextStyleSaveMappingData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hint_enter_title</item>
        <item name="android:textSize">@dimen/text_size_type_2</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_2</item>
        <item name="android:padding">@dimen/padding_size_type_1</item>
    </style>


    <declare-styleable name="LanternView">
        <attr name="lantern_view_textSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="SatelliteMapView">
        <attr name="radius" format="dimension"/>
    </declare-styleable>


    <style name="PopWinAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/anim_pop_window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_window_fade_out</item>
    </style>
    <!--android:clickable="true"-->
    <!--android:layout_width="@dimen/dp_90"-->
    <!--android:layout_height="@dimen/dp_90"-->
    <style name="ImageViewStyle01">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/dp_70</item>
        <item name="android:layout_height">@dimen/dp_70</item>
        <item name="android:src">@drawable/ic_navi</item>
    </style>
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="基合定位"-->
    <!--android:padding="@dimen/dp_5"-->
    <!--android:textColor="@color/colorBlack"-->
    <!--android:textSize="@dimen/sp_20"-->
    <style name="TextViewStyle01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_15</item>

    </style>



</resources>
