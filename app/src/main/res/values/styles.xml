<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonStyleNavigationItem">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTop">@drawable/ic_navi</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/padding_navigation_item</item>
    </style>

    <style name="TextViewSettingStyle">
        <item name="android:text">This is a setting style text view!</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_black_to_red</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:padding">@dimen/padding_navigation_item</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_1</item>
    </style>

    <style name="TextViewStyleSaveLocationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_type_4</item>
        <item name="android:text">@string/location_name</item>
    </style>

    <style name="EditTextStyleSaveLocationActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_type_2</item>
        <item name="android:text">中国深圳南山XXXX</item>
    </style>

    <style name="ButtonStyleLocationActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/catalogue_admin</item>
        <item name="android:textColor">@color/selector_black_to_white</item>
        <item name="android:background">@drawable/selector_primary_to_primary_dark</item>
        <item name="android:layout_margin">@dimen/layout_margin_type_2</item>
    </style>




    <declare-styleable name="LanternView">
        <attr name="lantern_view_textSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="SatelliteMapView">
        <attr name="radius" format="dimension"/>
    </declare-styleable>



</resources>
